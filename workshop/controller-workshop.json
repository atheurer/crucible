{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenvs": [
    {
      "name": "fedora",
      "requirements": [
        "motd",
        "dnf-tools",
        "core-utils",
        "build-libraries",
        "build-tools",
        "python39",
        "non-distro-python-deps",
        "redis",
        "distro-perl-tools",
        "distro-perl-modules",
        "container-tools",
        "container-storage-fuse",
        "httpd",
        "opensearch-repo",
        "opensearch",
        "opensearch-user",
        "nodejs",
        "non-distro-node-deps",
        "gh-cli-repo",
        "gh-cli"
      ]
    }
  ],
  "requirements": [
    {
      "name": "core-utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "curl",
          "tar",
          "cpio",
          "xz",
          "gzip",
          "jq",
          "git",
          "cpio",
          "findutils",
          "hostname",
          "iputils",
          "iproute",
          "bind-utils",
          "procps-ng",
          "bc",
          "sshpass"
        ]
      }
    },
    {
      "name": "python39",
      "type": "distro",
      "distro_info": {
        "packages": [
          "python39",
          "python3-pip",
          "python3-invoke",
          "python3-fabric",
          "python3-requests"
        ]
      }
    },
    {
      "name": "non-distro-python-deps",
      "type": "python3",
      "python3_info": {
        "packages": [
          "redis",
          "hiredis",
          "jsonschema"
        ]
      }
    },
    {
      "name": "build-libraries",
      "type": "distro",
      "distro_info": {
        "packages": [
          "xz-devel",
          "glibc-langpack-en"
        ]
      }
    },
    {
      "name": "build-tools",
      "type": "distro",
      "distro_info": {
        "packages": [
          "diffutils",
          "gcc",
          "libtool",
          "autoconf",
          "automake",
          "make"
        ]
      }
    },
    {
      "name": "redis",
      "type": "distro",
      "distro_info": {
        "packages": [
          "redis"
        ]
      }
    },
    {
      "name": "container-storage-fuse",
      "type": "manual",
      "manual_info": {
        "commands": [
          "cp /usr/share/containers/storage.conf /etc/containers",
          "sed -i -e 's|#mount_program = \"/usr/bin/fuse-overlayfs\"|mount_program = \"/usr/bin/fuse-overlayfs\"|' /etc/containers/storage.conf"
        ]
      }
    },
    {
      "name": "container-tools",
      "type": "distro",
      "distro_info": {
        "packages": [
          "buildah",
          "podman",
          "skopeo",
          "fuse-overlayfs"
        ]
      }
    },
    {
      "name": "httpd",
      "type": "distro",
      "distro_info": {
        "packages": [
          "httpd"
        ]
      }
    },
    {
      "name": "opensearch-repo",
      "type": "files",
      "files_info": {
        "files": [
          {
            "src": "https://artifacts.opensearch.org/releases/bundle/opensearch/2.x/opensearch-2.x.repo",
            "dst": "/etc/yum.repos.d/opensearch-2.x.repo"
          }
        ]
      }
    },
    {
      "name": "opensearch",
      "type": "distro",
      "distro_info": {
        "packages": [
          "opensearch"
        ],
        "environment": {
          "OPENSEARCH_INITIAL_ADMIN_PASSWORD": "foo"
        }
      }
    },
    {
      "name": "opensearch-user",
      "type": "manual",
        "manual_info": {
          "commands": [
            "chsh --shell /bin/bash opensearch"
          ]
        }
    },
    {
      "name": "nodejs",
      "type": "distro",
      "distro_info": {
        "packages": [
          "nodejs"
        ]
      }
    },
    {
      "name": "non-distro-node-deps",
      "type": "node",
      "node_info": {
        "packages": [
          "ansi-regex sax react"
        ]
      }
    },
    {
      "name": "motd",
      "type": "manual",
      "manual_info": {
        "commands": [
          "printf \"Crucible\\n    There is no escape\\n        (unless you press control-D)\\n\\n\\n\" >/etc/motd"
        ]
      }
    },
    {
      "name": "distro-perl-tools",
      "type": "distro",
      "distro_info": {
        "packages": [
          "perl-App-cpanminus"
        ]
      }
    },
    {
      "name": "distro-perl-modules",
      "type": "distro",
      "distro_info": {
        "packages": [
          "perl-Coro",
          "perl-JSON",
          "perl-JSON-XS",
          "perl-JSON-Validator",
          "perl-Data-UUID",
          "perl-Digest-SHA",
          "perl-Archive-Extract-xz-IO-Uncompress-UnXz.noarch",
          "perl-Data-Dumper",
          "perl-Digest-MD5",
          "perl-Getopt-Long",
          "perl-REST-Client",
          "perl-Time-HiRes",
          "perl-DBI",
          "perl-DBD-SQLite"
        ]
      }
    },
    {
      "name": "dnf-tools",
      "type": "distro",
      "distro_info": {
        "packages": [
          "\"dnf-command(config-manager)\""
        ]
      }
    },
    {
      "name": "gh-cli-repo",
      "type": "files",
      "files_info": {
        "files": [
          {
            "src": "https://cli.github.com/packages/rpm/gh-cli.repo",
            "dst": "/etc/yum.repos.d/gh-cli.repo"
          }
        ]
      }
    },
    {
      "name": "gh-cli",
      "type": "distro",
      "distro_info": {
        "packages": [
          "gh"
        ]
      }
    }
  ]
}
